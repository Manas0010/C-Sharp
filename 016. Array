using System;
namespace workingArray
{
    class program
    {
        static void Main()
        {
            //initialize and assign values in different lines
            int[] evenNums = new int[3];
            evenNums[0] = 0;
            evenNums[1] = 2;
            evenNums[2] = 4;
            
            //initialize and assign values in same line
            int[] oddNums = { 1, 3, 5 };
            //retrieve and print evenNums[] array

            for(int i = 0; i < evenNums.Length; i++)
            {
                Console.WriteLine(evenNums[i]);
            }

            //retrieve and print oddNums[] array

            for(int i = 0; i < oddNums.Length; i++)
            {
                Console.WriteLine(oddNums[i]);
            }


            //Advantages: Arrays are strongly typed.

            //Disadvantages: Arrays cannot grow in size once initialized.
            //Have to rely on integral indices to store or retrieve items from the array. 

        }
    }
}
