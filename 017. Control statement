//WhileLopp
using System;
namespace whileLoop
{
    class program
    {
        static void Main()
        {
            int i = 1;
            while (i < 11)
            {
                Console.WriteLine("The number is {0}",i);
                i++;
            }
        }
    }
}


//do While
using System;
namespace doWhileLoop
{
    class program2
    {
        static void Main()
        {
            int i = 1;
            do
            {
                Console.WriteLine("The number is {0}", i);
                i++;
            }
            while (i < 6);
        }
    }
}

//Switch Case

using System;
namespace switchStatement
{
	class program3
    {
		static void Main()
        {
            string fruit = "mango";
            switch (fruit)
            {
                case "apple":
                    Console.WriteLine("I love {0}",fruit);
                    break;

                case "banana":
                    Console.WriteLine("I love {0}",fruit);
                    break;

                case "mango":
                    Console.WriteLine("I love {0}",fruit);
                    break;

                default:
                    Console.WriteLine("I hate fruits");
                    break;

            }
        }
    }
}

//foreach

using System;
namespace forEach
{
	class program4
    {
		static void Main()
        {
            int[] myArray = { 1, 3, 5, 9, 4, 2 };
			foreach(int k in myArray)
            {
                Console.WriteLine("The number is {0}",k);
                if (k == 9) { break; }
            }
        }
    }
}

//for Loop
using System;
namespace forLoop
{
	class program5
    {
		static void Main()
        {
            int i;
            for (i = 1; i < 11; i++)
            {
                if (i == 7) { continue; }
                Console.WriteLine("Now the num is {0}", i);
            }
        }
    }
}

//if statement

using System;
namespace ifStatement
{
	class program6
    {
		static void Main()
        {
            int a1 = 5, b1 = 6;
            if (a1 > b1)
            {
                Console.WriteLine("a1 is greater than b1");
            }
			else if (a1 == b1)
            {
                Console.WriteLine("a1 is equal to b1");
            }
            else
            {
                Console.WriteLine("b1 is greater than a1");
            }

        }
    }
}



