using System;
namespace controlStatement
{
    class program
    {
        static void Main()
        {
            //ifCondition();
            //forLoop();
            forEach();
        }

        public static void ifCondition()
        {
            int a = 4, b = 5;
            if (a > b)
            {
                Console.WriteLine("a is greater  than b");
            }
            else if (a == b)
            {
                Console.WriteLine("a is equal with b");
            }
            else
            {
                Console.WriteLine("b is greater than a");
            }
        }

        public static void forLoop()
        {
            for(int i = 1; i < 11; i++)
            {
                Console.WriteLine("The nmber is {0}",i);
            }
        }

        public static void forEach()
        {
            int[] myArray = { 1, 3, 5, 6, 7, 2, 6, 8, };
            int sum = 0;
            foreach (int k in myArray)
            {
                sum = sum + k;
            }
            Console.WriteLine("The sum of myArray is {0}",sum);

        }
    }
}
