using System;
namespace ArrayConsole
{
    class program
    {
        static void Main()
        {
            int[] myArr = new int[5];
            Console.WriteLine("Please enter all numbers: ");
            int sum = 0;
            for(int i = 0; i < 5; i++)
            {
                myArr[i] = Convert.ToInt32(Console.ReadLine());
                sum = sum + i;
            }
            Console.WriteLine("The sum of myArray items are: {0}",sum);           
            
        }
    }
}
